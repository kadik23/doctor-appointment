generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Doctor {
  id            String          @id @default(auto()) @map("_id") @db.ObjectId
  email         String          @unique
  password      String 
  fullname      String?
  phone         String?
  biography     String?
  rating        Int?
  imageProfile  String?
  @@map("doctors")
}

model Specialization {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  description  String
  doctors      DoctorSpecialization[]  // Define intermediate model for many-to-many relationship
  @@map("specializations")
}

model DoctorSpecialization {
  doctor       Doctor    @relation(fields: [doctorId], references: [id])
  specialization Specialization @relation(fields: [specializationId], references: [id])

  doctorId       String
  specializationId String

  @@id([doctorId, specializationId])
}
